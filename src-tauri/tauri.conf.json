{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agent Workspace",
  "version": "0.1.0",
  "identifier": "com.agentworkspace.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Agent Workspace",
        "width": 1460,
        "height": 920,
        "minWidth": 1080,
        "minHeight": 680,
        "resizable": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

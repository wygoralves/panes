{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Panes",
  "version": "0.14.0",
  "identifier": "com.panes.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Panes",
        "width": 1460,
        "height": 920,
        "minWidth": 1080,
        "minHeight": 680,
        "resizable": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://wygoralves.github.io/panes/latest.json"],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBQUU2N0M2QTgyNjZBNjgKUldSb2FpYW94bWV1cXVZeko4bjl6a1c0YlROWlcwVnFZTnI5UnM1OE00cmhOQm1tY0JLRStBelAK"
    }
  }
}
